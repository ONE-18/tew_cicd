{
  "tasks": {
    "start": "deno run --allow-net --allow-read src/main.ts",
    "dev": "deno run --allow-net --allow-read --watch src/main.ts",
    "test": "deno test -A --fail-fast",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": { "useTabs": false, "lineWidth": 100 },
  "lint": { "rules": { "tags": ["recommended"] } }
}
